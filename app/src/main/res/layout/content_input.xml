<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingLeft="@dimen/activity_horizontal_margin"
       android:paddingRight="@dimen/activity_horizontal_margin"
       android:paddingTop="@dimen/activity_vertical_margin"
       android:paddingBottom="@dimen/activity_vertical_margin"
       tools:context="sap.schweifer.at.tcode.InputActivity">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/input_Appl"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:inputType="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/abc_dialog_list_padding_vertical_material"
        android:paddingLeft="@dimen/abc_dialog_list_padding_vertical_material"
        android:paddingRight="@dimen/abc_dialog_list_padding_vertical_material"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_Code"
        android:layout_alignTop="@+id/input_Appl"
        android:layout_toEndOf="@+id/input_Appl"
        android:hint="@string/ins_code"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_Bez"
        android:layout_below="@+id/input_Code"
        android:layout_alignParentStart="true"
        android:hint="@string/ins_Bez"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/input_Bes"
        android:gravity="top"
        android:layout_alignEnd="@+id/input_Code"
        android:singleLine="false"
        android:hint="@string/ins_Bes"
        android:layout_below="@+id/input_Bez"/>

    <EditText
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:id="@+id/input_Mod"
        android:layout_below="@+id/input_Bes"
        android:hint="@string/ins_Mod"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_Proz"
        android:layout_alignBottom="@+id/input_Mod"
        android:layout_toEndOf="@+id/input_Mod"
        android:hint="@string/ins_Proz"/>


</merge>